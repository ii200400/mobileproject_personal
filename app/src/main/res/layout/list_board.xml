<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textview_border">

    <ImageView
        android:id="@+id/img_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="제목"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_board"
        app:layout_constraintLeft_toRightOf="@+id/img_board"
        app:layout_constraintTop_toTopOf="@+id/img_board"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="2017-12-21 17:58:21"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_board"
        app:layout_constraintLeft_toRightOf="@+id/img_board"
        app:layout_constraintTop_toTopOf="@+id/img_board"
        app:layout_constraintVertical_bias="0.9" />

    <CheckBox
        android:id="@+id/check_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_board"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_board" />

</android.support.constraint.ConstraintLayout>